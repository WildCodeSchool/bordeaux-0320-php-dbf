<div class="card">
    <div class="card-content light-blue">
        <i class="material-icons left white-text">face</i>
        <b>Civilités</b>
    </div>
    <div class="card-tabs">
        <ul class="tabs tabs-fixed-width"  id="civil-tabs">
            <li class="tab" id="civil-tab-1"><a href="#civil-list" class="active light-blue-text">Liste</a></li>
            <li class="tab" id="civil-tab-2"><a href="#civil-add" class="light-blue-text" >Ajouter</a></li>
            <li class="tab" id="civil-tab-3"><a href="#civil-edit" class="light-blue-text">Modifier</a></li>

        </ul>
    </div>
    <div class="card-content grey lighten-4">
        <div id="civil-list">
            <div class="input-field ">
                <label for="service"></label>
                <select id="civility-selector">
            {% for civility in civilities %}
                <option value="{{ civility.id }}">{{ civility.name }}</option>
            {% endfor %}
                </select>
            </div>

        </div>
        <div id="civil-add">
            <a  href="#modal-add-civility" class="btn modal-trigger blue lighten-2"><i class="material-icons">add</i></a>
        </div>
        <div id="civil-edit">
            <a href="#modal-edit-civility" class="btn modal-trigger blue darken-2"><i class="material-icons">edit</i></a>
        </div>
    </div>
</div>

<!-- MODALE AJOUT civilité -->

<div id="modal-add-civility" class="modal">
    <div class="modal-content">
        <h4 class="center-align">Ajouter une civilité</h4>
        <div class="row">
            <div class="col s10 offset-s1">
                {% include 'civility/new.html.twig' %}
            </div>
        </div>
    </div>
</div>

<!--MODALE EDITION civilité -->

<div id="modal-edit-civility" class="modal">
    <div class="modal-content">
        <h4 class="center-align">Modifier une civilité</h4>
        <div class="row">
            <div class="col s10 offset-s1">
                {% include 'civility/index.html.twig'%}
            </div>
        </div>
    </div>
</div>
