{% extends 'base.html.twig' %}

{% block title %}Call{% endblock %}

{% block body %}
    <h1>Call</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ call.id }}</td>
            </tr>
            <tr>
                <th>IsUrgent</th>
                <td>{{ call.isUrgent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsProcessEnded</th>
                <td>{{ call.isProcessEnded ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAppointmentTaken</th>
                <td>{{ call.isAppointmentTaken ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ call.createdAt ? call.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>RecallDate</th>
                <td>{{ call.recallDate ? call.recallDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FreeComment</th>
                <td>{{ call.freeComment }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ call.source }}</td>
            </tr>
            <tr>
                <th>Internet</th>
                <td>{{ call.internet }}</td>
            </tr>
            <tr>
                <th>IsProcessed</th>
                <td>{{ call.isProcessed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('call_index') }}">back to list</a>

    <a href="{{ path('call_edit', {'id': call.id}) }}">edit</a>

    {{ include('call/_delete_form.html.twig') }}
{% endblock %}
