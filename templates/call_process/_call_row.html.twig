<li class="collection-item" data-date="{{ call.recallDate|date('Ymd') }}{{ call.recallDate|date('Hi') }}" id="call-{{ call.id }}">
    <div class="row call-list-row">
        <div class="col s8">
            <span class="title">{{call.client.civility.name | upper}} {{call.client.name | upper}}</span>
            <p>
                <span class="chip grey lighten-3 grey-text text-darken-4">{{call.client.phone}}</span>
                {% if call.client.phone2 != '' %}
                    <span class="chip grey lighten-3 grey-text text-darken-4">{{ call.client.phone2 }}</span>
                {% endif %}
            </p>
            <p>
                <b>{{call.service.concession.town.name}} > {{call.service.concession.name}} > {{call.service.name}}</b><br>
                {{call.subject.name}} - {{call.comment.name}}<br>
                <span class="free-comment"> {{call.freeComment | raw}}</span>
            </p>
        </div>

        <div class="col s4 left-align ">
            <div class="call-calendar grey lighten-4">
                <div class="call-cal-header {% if call.isUrgent %}urgent{% endif %}">
                    <i class="material-icons ">event_date </i>
                    <span class="call-cal-date">
                        {% if call.recallDate|date('Y-m-d') == date()|date('Y-m-d') %}
                            Aujourd'hui
                        {% elseif call.recallDate|date('Y-m-d') == date('+1days')|date('Y-m-d') %}
                            Demain
                        {% elseif call.recallDate|date('Y-m-d') == date('-1day')|date('Y-m-d') %}
                            Hier
                        {% else %}
                            {{ call.recallDate|date('Y-m-d') | date('d-m-Y')|date('Y-m-d')}}
                        {% endif %}
                    </span>
                </div>
                <div class="call-cal-body">
                    {% if call.isUrgent %}
                    <span class="red-text">urgent</span>
                    {% else %}
                    <span class="grey-text text-darken-4">{{call.recallPeriod.name}} {{call.recallHour|date('H:i')}}</span>
                    {% endif %}
                </div>
                <div class="call-cal-action">
                    <a class="{% if call.isUrgent %}red{% else %} green darken-3 {% endif %} call-treatment-btn" href="#" data-call="{{ call.id }}" id="treatment-btn-{{ call.id }}">Traiter</a>
                </div>
            </div>
        </div>
    </div>
</li>
