<div class="row">
    <h4>Transférer un appel</h4>
</div>
<div class="row">
    <div class="col s6">
        <div class="col s12">
            <span class="title"><h5>{{call.client.name | upper}}</h5></span>
            <p>
                {{call.client.phone}}<br>
                {{ call.client.phone2 }}
            </p>
            <p>
                <b>{{ call.recipient.service.concession.town.name }} > {{ call.recipient.service.concession.name }} > {{ call.recipient.service.name }}</b><br>
                <small>{{call.subject.name}} - {{call.comment.name}}</small><br>
            </p>

            <table>
                {% for process in call.callProcessings|reverse %}
                    <div class="d-flex gap-10 mb-10">
                        <span class="chip {{process.stepColors.bgColor}} black-text">{{process.stepColors.stepName | raw }}</span>
                        <span class="bolder">
                            {{ process.createdAt | dateName }} à {{ process.createdAt | timeFormat }}
                            {% if process.comment %}
                                <br><small class="m-0 p-0 no-bold">
                                    {{ process.comment }}
                                </small>
                            {% endif %}
                        </span>

                    </div>
                {% endfor %}
            </table>

        </div>
    </div>
    <div class="col s6">
        <div class="row">
            {% include 'call_process/_form_transfer.html.twig' %}
        </div>
    </div>
</div>
