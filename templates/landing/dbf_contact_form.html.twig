{% block title %}demander un rendez-vous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('forms') }}
{% endblock %}

{% block navbar %}
{% endblock %}
{% block body %}
    <div class="container contactform-page">
        <div class="row">
            <div class="col s12 l6 offset-l3">


                {% if errors | length > 0 %}
                    <span class="alert-form red white-text hide" id="form-alert">Merci de renseigner tous les champs avant de choisir un destinataire</span>
                {% endif %}
                <div class="col s12">
                    {% for type, messages in app.session.flashbag.all() %}
                        {% if type == 'landing_success' or type == 'landing_error' %}
                            {% for message in messages %}
                                <div class="col s12 landing_flash {{ type }} {% if type == 'landing_success' %}blue darken-4{% else %}red{% endif %}">
                                    <span class="white-text flash-{{ type }}">{{ message | raw }}</span>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                </div>
                {% if success == 0 %}
                    {{ form_start(form, {attr:{'id': 'contact_form_id'}}) }}
                    <div class="col s1 mgt15">
                        <i class="material-icons">person</i>
                    </div>
                    <div class="col s2 mgt15">
                        {{ form_widget(form.civility) }}
                    </div>
                    <div class="col s9 mgt15">
                        {{ form_widget(form.name, {'attr': {'class': (errors.name is defined) ? 'red-text upper' : 'upper' }}) }}
                        {% if errors.name is defined %}
                            <span class="textAlert red-text">{{ errors.name }}</span>
                        {% endif %}
                    </div>
                    <div class="col s1 mgt30">
                        <i class="material-icons">local_phone</i>
                    </div>
                    <div class="col s11 m7 mgt30">
                        {{ form_widget(form.phone, {'attr': {'class': (errors.phone is defined) ? 'red-text' }}) }}
                        {% if errors.phone is defined %}
                            <span class="textAlert red-text">{{ errors.phone }}</span>
                        {% endif %}
                    </div>
                    <div class="col s1 mgt30">
                        <i class="material-icons">directions_car</i>
                    </div>
                    <div class="col s11 m3 mgt30">
                        {{ form_widget(form.immat, {'attr': {'class': (errors.immat is defined) ? 'red-text upper' : 'upper' }}) }}
                        {% if errors.immat is defined %}
                            <span class="textAlert red-text">{{ errors.immat }}</span>
                        {% endif %}
                    </div>

                        <div class="col s12 mgt15 blue-text text-darken-4">
                            <b>Quand pouvons nous vous appeler ?</b>
                        </div>

                    <div class="col s6 mgt15">
                        {{ form_widget(form.date, {'attr': {'class': (errors.day is defined or errors.date is defined) ? 'red-text' }}) }}
                        {% if errors.day is defined %}
                            <span class="textAlert red-text">{{ errors.day }}</span>
                        {% endif %}
                        {% if errors.date is defined %}
                            <span class="textAlert red-text">{{ errors.date }}</span>
                        {% endif %}
                    </div>
                    <div class="col l1 mgt15 hide-on-med-and-down">
                        <i class="material-icons">access_time</i>
                    </div>
                    <div class="col s3 l2 mgt15">
                        {{ form_widget(form.hour) }}
                    </div>
                    <div class="col s3 l2 mgt15">
                        {{ form_widget(form.minute) }}
                    </div>

                        <div class="col s12 mgt30 blue-text text-darken-4">
                            <b>Choisissez votre concession</b>
                        </div>

                    <div class="col s1 mgt15 ">
                        <span><i class="material-icons">location_on</i></span>
                    </div>
                    <div class="col s11 mgt15 " id="concessions">
                        {{ form_widget(form.place) }}
                    </div>
                    {% if form.service is defined %}
                            <div class="col s1 mgt15 ">
                            </div>
                            <div class="col s11 mgt15 ">
                                <b class="blue-text text-darken-4">Pr√©cisez le service que vous souhaitez contacter</b>
                            </div>
                        <div class="col s1 mgt15">

                        </div>
                        <div class="col s11 mgt15">
                            {{ form_widget(form.service) }}
                        </div>
                    {% endif %}
                    {% if form.message is defined %}
                        <div class="col s1 mgt30 ">
                        <span><i class="material-icons">message</i></span><bR>
                    </div>
                    <div class="col s11 mgt30 ">
                        {{ form_widget(form.message) }}
                    </div>
                        {% endif %}

                    <div class="col s1 mgt30"></div>
                    <div class="col s11 mgt15">
                        <button class="btn btn-large green " style="width: 100%;"
                                id="submit_landing_form_contacts">{{ button_label|default('envoyer') }}</button>
                    </div>
                    <div class="col s11 m8 hide mgt15" id="landing_loader">
                        <div class="progress grey lighten-3">
                            <div class="indeterminate green"></div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                {% endif %}
            </div>

        </div>

    </div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const origin = window.parent.location
        console.log(origin)
        if (!document.getElementById('dbf_contact_origin').value || document.getElementById('dbf_contact_origin').value == '') {
            document.getElementById('dbf_contact_origin').setAttribute('value', origin.href)
        }
    })

</script>
{% endblock %}
