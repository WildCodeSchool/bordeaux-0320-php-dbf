{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s8">
            <h4 class="light-blue-text">Recherche</h4>
        </div>
        <div>
        {% include('/search/_form_search.html.twig') %}
        </div>
        {% if export is defined  and export != "" and is_granted('ROLE_ADMIN') %}
            <a href="{{ path('export_to_csv', {'exportedCalls': export}) }}" download="export{{ "now"|date("d_m_Y") }}.csv" class="btn btn-large blue darken-4">
                <i class="material-icons left">file_download</i>
                Exporter en CSV
            </a>
        {% endif %}
        {% include 'components/_flashes.html.twig' %}
        <div>
            <h4 class="light-blue-text">Résultats</h4>
            <div class="col s12">
                {% if calls is empty %}
                    <p>Pas de résultat à afficher</p>
                {% else %}
                    <ul class="list-calls" id="list-calls-to-process">
                        {% for call in calls %}
                            {% include 'components/_callsList.html.twig' %}
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
