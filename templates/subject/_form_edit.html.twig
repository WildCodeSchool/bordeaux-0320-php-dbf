<div class="row grey lighten-4">
    <form method="post" action="{{ path('subject_edit', {'id': subject.id}) }}">
        {{ form_start(form_subject) }}
        <div class="row">
            <div class="input-field col s5">
                {{ form_widget(form_subject.name) }}
            </div>
            <div class="input-field col s2">
                {{ form_widget(form_subject.isForAppWorkshop) }}
            </div>
            <div class="input-field col s5">
                {{ form_widget(form_subject.city) }}
            </div>

            <div class="input-field col s12">
                <label>
                    {{ form_widget(form_subject.isHidden) }}
                    <span>Motif masqu√©</span>
                </label>
            </div>
        </div>
        <div class="row mgt30">
            <div class="col s12">
                <button class="btn modal-close light-blue btn-small">{{ button_label|default('Sauvegarder') }}</button>
            </div>
        </div>
        {{ form_end(form_subject) }}
</div>
