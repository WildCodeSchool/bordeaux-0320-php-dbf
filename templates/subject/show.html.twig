{% extends 'base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
    <h1>Motifs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ subject.name }}</td>
            </tr>
            <tr>
                <th>Rendez-vous en atelier</th>
                <td>{{ subject.isForAppWorkshop ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('subject_index') }}">Liste des motifs</a>

    <a href="{{ path('subject_edit', {'id': subject.id}) }}"><i class="material-icons">edit</i></a>

    {{ include('subject/_delete_form.html.twig') }}
{% endblock %}
