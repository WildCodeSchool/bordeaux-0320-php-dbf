<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('êtes vous sûr de vouloir supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn mgt15 light-blue darken-1"><i class="material-icons">delete</i></button>
</form>
